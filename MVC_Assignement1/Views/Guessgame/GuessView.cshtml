
@{
    ViewBag.Title = "GuessView";
}
<h2> Gussing Game</h2>
<h3> Guess a number in between 1 to 100.</h3>
<form id="tempForm" name="tempForm" action="/Guessgame/GuessView" method="post">
    <label>Enter a number</label>
</form>

<form id="tempForm" name="tempForm" action="/Guessgame/CheckGussing" method="post">
    <input id="input_num" name="input_num" type="number" min="1" placeholder="Enter number" required autofocus />
    <input type="submit" name="submit_value" value="Submit" />
</form>


<h2 class="text-success">@ViewBag.Message</h2>
@if (ViewBag.Message == "Congratulations")
{
    <p>your guess count is:@MVC_Assignement1.Models.GameModel.store_num.Count</p>
    <p>your inputs are:</p>
}
@for (int i = 0; i < @MVC_Assignement1.Models.GameModel.store_num.Count; i++)
{
    <p>@MVC_Assignement1.Models.GameModel.store_num[i]</p>
}

<form id="tempForm" name="tempForm" action="/Guessgame/Reset" method="post">
    <input type="submit" name="Reset" value="Reset"/>
    <br />
    <br />
</form>